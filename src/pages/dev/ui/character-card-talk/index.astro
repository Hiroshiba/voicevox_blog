---
import { characterInfos } from "@/constants/characterInfo";
import CharacterCard from "@/pages/talk/_CharacterCard.astro";
import "@/styles/bulma.scss";
import "@/styles/global.scss";
import "@/styles/helper.scss";

const characterInfo1 = characterInfos["ずんだもん"];
const characterInfo2 = characterInfos["四国めたん"];
const characterInfo3 = characterInfos["春日部つむぎ"];
---

<html lang="ja">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <meta name="robots" content="noindex, nofollow" />
    <title>CharacterCard (talk) 確認用ページ</title>
  </head>
  <body>
    <div style="padding: 2rem;">
      <h1 class="text-2xl font-bold mb-6">CharacterCard (talk) 確認用ページ</h1>

      <section class="mb-8">
        <h2 class="text-xl font-semibold mb-4">キャラクター一覧（抜粋）</h2>
        <div class="container is-max-desktop is-flex is-flex-direction-column">
          <div class="columns is-multiline is-centered">
            <CharacterCard characterInfo={characterInfo1} />
            <CharacterCard characterInfo={characterInfo2} />
            <CharacterCard characterInfo={characterInfo3} />
          </div>
        </div>
      </section>
    </div>
  </body>
</html>
