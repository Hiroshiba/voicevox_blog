---
import { characterInfos } from "@/constants/characterInfo";
import AudioSample from "@/pages/product/AudioSample";
import "@/styles/bulma.scss";
import "@/styles/global.scss";
import "@/styles/helper.scss";

const characterInfo = characterInfos["ずんだもん"];
---

<html lang="ja">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <meta name="robots" content="noindex, nofollow" />
    <title>AudioSample (product) 確認用ページ</title>
  </head>
  <body>
    <div style="padding: 2rem;">
      <h1 class="text-2xl font-bold mb-6">
        AudioSample (product) 確認用ページ
      </h1>

      <section class="mb-8">
        <h2 class="text-xl font-semibold mb-4">サンプルボイスUI</h2>
        <div
          class="product-audio-sample-preview"
          style={{
            backgroundColor: characterInfo.lightColor,
            padding: "2rem",
            borderRadius: "16px",
            display: "inline-block",
          }}
        >
          <div class="info">
            <AudioSample client:load characterInfo={characterInfo} />
          </div>
        </div>
      </section>
    </div>
  </body>
</html>

<style lang="scss" is:global>
  /* NOTE: src/pages/product/_TopContainer.astro の is:global スタイルを dev/ui でも再現するため、必要最小限を複製しています */
  .product-audio-sample-preview {
    .info {
      width: 200px;
    }

    .sample {
      background-color: #fffc;
      width: 200px;
      border-radius: 16px;
      display: flex;
      flex-direction: column;
      align-items: center;
    }
  }
</style>
