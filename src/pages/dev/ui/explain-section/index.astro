---
import ExplainSection from "@/pages/dormitory/_ExplainSection.astro";
import "@/styles/bulma.scss";
import "@/styles/global.scss";
import "@/styles/helper.scss";
---

<html lang="ja">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <meta name="robots" content="noindex, nofollow" />
    <title>ExplainSection 確認用ページ</title>
  </head>
  <body>
    <div style="padding: 2rem;">
      <h1 class="text-2xl font-bold mb-6">ExplainSection 確認用ページ</h1>

      <section class="mb-8">
        <h2 class="text-xl font-semibold mb-4">デフォルト</h2>
        <ExplainSection />
      </section>

      <section class="mb-8">
        <h2 class="text-xl font-semibold mb-4">
          showingDormitoryPageButton=true
        </h2>
        <ExplainSection showingDormitoryPageButton />
      </section>
    </div>
  </body>
</html>
