---
import "@/styles/global.css";

const modalPages = [
  { path: "/dev/ui/modal/privacy-policy/", label: "プライバシーポリシー" },
  { path: "/dev/ui/modal/nemo-term/", label: "VOICEVOX Nemo 利用規約" },
  { path: "/dev/ui/modal/library-term-intro/", label: "利用規約" },
  { path: "/dev/ui/modal/nemo-guidance/", label: "VOICEVOX Nemo ご利用案内" },
  { path: "/dev/ui/modal/download-nemo/", label: "Nemo エンジン ダウンロード" },
  { path: "/dev/ui/modal/download/", label: "VOICEVOX ダウンロード" },
];

const componentPages = [
  { path: "/dev/ui/play-button/", label: "PlayButton" },
  { path: "/dev/ui/style-dropdown/", label: "StyleDropdown" },
  { path: "/dev/ui/footer/", label: "Footer" },
  { path: "/dev/ui/header/", label: "Header" },
  { path: "/dev/ui/software-feature/", label: "SoftwareFeature" },
  { path: "/dev/ui/engine-guidance/", label: "EngineGuidanceSection" },
  { path: "/dev/ui/oss-guidance/", label: "OssGuidanceSection" },
  { path: "/dev/ui/link-list/", label: "LinkListSection" },
];
---

<html lang="ja">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <meta name="robots" content="noindex, nofollow" />
    <title>UI 確認用ページ</title>
  </head>
  <body class="p-8">
    <h1 class="text-2xl font-bold mb-6">UI 確認用ページ</h1>

    <section class="mb-8">
      <h2 class="text-xl font-semibold mb-4">モーダル</h2>
      <ul class="space-y-2">
        {
          modalPages.map((page) => (
            <li>
              <a
                href={page.path}
                class="text-emerald-600 hover:text-emerald-700 underline"
              >
                {page.label}
              </a>
            </li>
          ))
        }
      </ul>
    </section>

    <section class="mb-8">
      <h2 class="text-xl font-semibold mb-4">コンポーネント</h2>
      <ul class="space-y-2">
        {
          componentPages.map((page) => (
            <li>
              <a
                href={page.path}
                class="text-emerald-600 hover:text-emerald-700 underline"
              >
                {page.label}
              </a>
            </li>
          ))
        }
      </ul>
    </section>
  </body>
</html>
