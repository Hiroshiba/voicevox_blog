---
import DownloadModal from "@/components/modal/download/DownloadModal";
import "@/styles/bulma.scss";
import "@/styles/global.scss";
---

<html lang="ja">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <meta name="robots" content="noindex, nofollow" />
  </head>
  <body>
    <DownloadModal client:only="react" />
  </body>
</html>

<script>
  import { $downloadModal } from "@/store";

  $downloadModal.set(true);
</script>

<style lang="scss" is:global>
  @use "bulma/sass/layout" as *;
  @use "bulma/sass/utilities/mixins" as *;

  .modal {
    --bulma-body-color: var(--bulma-text);
    --bulma-hr-background-color: var(--bulma-background);

    color: var(--bulma-body-color);
  }

  .modal-download {
    @include tablet {
      .modal-card {
        width: 670px;
      }
    }
  }
</style>
