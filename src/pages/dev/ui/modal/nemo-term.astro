---
import { compiledContent as nemoReadmeHtml } from "@/assets/nemo-term.md";
import { NemoTermModel } from "@/components/modal/MarkdownModals";
import "@/styles/bulma.scss";
import "@/styles/global.scss";
---

<html lang="ja">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <meta name="robots" content="noindex, nofollow" />
  </head>
  <body>
    <NemoTermModel client:only="react" html={await nemoReadmeHtml()} />
  </body>
</html>

<script>
  import { $nemoTermModal } from "@/store";

  $nemoTermModal.set(true);
</script>
