---
import OssGuidanceSection from "@/pages/_OssGuidanceSection.astro";
import "@/styles/bulma.scss";
import "@/styles/global.scss";
import "@/styles/helper.scss";
import "@fortawesome/fontawesome-svg-core/styles.css";
---

<html lang="ja">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <meta name="robots" content="noindex, nofollow" />
    <title>OssGuidanceSection 確認用ページ</title>
  </head>
  <body>
    <div style="padding: 2rem;">
      <h1 class="text-2xl font-bold mb-6">OssGuidanceSection 確認用ページ</h1>

      <section class="mb-8">
        <h2 class="text-xl font-semibold mb-4">デフォルト</h2>
        <OssGuidanceSection />
      </section>

      <section class="mb-8">
        <h2 class="text-xl font-semibold mb-4">isDark</h2>
        {/* NOTE: `/song` に合わせて isDark の本文色は親側で白にしています。 */}
        <div data-theme="dark" class="has-text-white has-background-black">
          <OssGuidanceSection isDark />
        </div>
      </section>
    </div>
  </body>
</html>
