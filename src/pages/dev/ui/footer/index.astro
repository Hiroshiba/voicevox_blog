---
import Footer from "@/components/Footer.astro";
import "@/styles/global.css";
---

<html lang="ja">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <meta name="robots" content="noindex, nofollow" />
    <title>Footer 確認用ページ</title>
  </head>
  <body>
    <div style="padding: 2rem;">
      <h1 class="text-2xl font-bold mb-6">Footer 確認用ページ</h1>

      <section class="mb-8">
        <h2 class="text-xl font-semibold mb-4">デフォルト（isDark=false）</h2>
        <div class="p-4">
          <Footer />
        </div>
      </section>

      <section class="mb-8">
        <h2 class="text-xl font-semibold mb-4">ダークモード（isDark=true）</h2>
        <div data-theme="dark">
          <div class="p-4 bg-black">
            <Footer isDark={true} />
          </div>
        </div>
      </section>
    </div>
  </body>
</html>
