  <body>
    <div class="software-feature-page" style="padding: 2rem;">
      <h1 class="text-2xl font-bold mb-6">SoftwareFeature 確認用ページ</h1>

      <section class="mb-8">
        <h2 class="text-xl font-semibold mb-4">デフォルト</h2>
        <section class="section not-header is-flex is-justify-content-center">
          <div class="container is-max-desktop columns is-desktop is-vcentered">
            <SoftwareFeature class="column is-narrow" />
          </div>
        </section>
      </section>
    </div>
  </body>
