---
import PlayButton from "@/components/PlayButton/index.astro";
import "@/styles/bulma.scss";
import "@/styles/global.scss";
import "@/styles/helper.scss";

import zundamonAudio1 from "@/assets/talk-audios/zundamon-normal-001.wav";
import zundamonAudio2 from "@/assets/talk-audios/zundamon-normal-002.wav";
import zundamonAudio3 from "@/assets/talk-audios/zundamon-normal-003.wav";
---

<html lang="ja">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <meta name="robots" content="noindex, nofollow" />
    <title>PlayButton 確認用ページ</title>
  </head>
  <body>
    <div style="padding: 2rem;">
      <h1 class="text-2xl font-bold mb-6">PlayButton 確認用ページ</h1>

      <section class="mb-8">
        <h2 class="text-xl font-semibold mb-4">デフォルト（primary）</h2>
        <div class="flex gap-2 items-center">
          <PlayButton audio={zundamonAudio1} name="ずんだもんサンプル1" />
          <PlayButton audio={zundamonAudio2} name="ずんだもんサンプル2" />
          <PlayButton audio={zundamonAudio3} name="ずんだもんサンプル3" />
        </div>
      </section>

      <section class="mb-8">
        <h2 class="text-xl font-semibold mb-4">サイズバリエーション</h2>
        <div class="flex gap-4 items-center">
          <div>
            <p class="mb-2">is-small</p>
            <PlayButton
              audio={zundamonAudio1}
              name="ずんだもん小"
              class="is-small"
            />
          </div>
          <div>
            <p class="mb-2">デフォルト</p>
            <PlayButton audio={zundamonAudio1} name="ずんだもん通常" />
          </div>
          <div>
            <p class="mb-2">is-medium</p>
            <PlayButton
              audio={zundamonAudio1}
              name="ずんだもん中"
              class="is-medium"
            />
          </div>
          <div>
            <p class="mb-2">is-large</p>
            <PlayButton
              audio={zundamonAudio1}
              name="ずんだもん大"
              class="is-large"
            />
          </div>
        </div>
      </section>

      <section class="mb-8">
        <h2 class="text-xl font-semibold mb-4">カスタムカラー（Nemo用）</h2>
        <div class="flex gap-4 items-center">
          <div>
            <p class="mb-2">女性（ピンク）</p>
            <PlayButton
              audio={zundamonAudio1}
              name="女性ボイス"
              color="#f1736f"
            />
          </div>
          <div>
            <p class="mb-2">男性（水色）</p>
            <PlayButton
              audio={zundamonAudio1}
              name="男性ボイス"
              color="#6fcef1"
            />
          </div>
        </div>
      </section>
    </div>
  </body>
</html>
