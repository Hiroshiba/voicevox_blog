---
import { characterInfos } from "@/constants/characterInfo";
import CallBox from "@/pages/dormitory/[characterId]/_CallBox.astro";
import "@/styles/bulma.scss";
import "@/styles/global.scss";
import "@/styles/helper.scss";

const shikokuMetan = characterInfos.四国めたん;
const zundamon = characterInfos.ずんだもん;
---

<html lang="ja">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <meta name="robots" content="noindex, nofollow" />
    <title>CallBox 確認用ページ</title>
  </head>
  <body>
    <div style="padding: 2rem;">
      <h1 class="text-2xl font-bold mb-6">CallBox 確認用ページ</h1>

      <section class="mb-8">
        <h2 class="text-xl font-semibold mb-4">四国めたん → ずんだもん</h2>
        <CallBox
          characterInfo={shikokuMetan}
          baseCharacterKey="四国めたん"
          targetCharacterKey="ずんだもん"
        />
      </section>

      <section class="mb-8">
        <h2 class="text-xl font-semibold mb-4">四国めたん → 春日部つむぎ</h2>
        <CallBox
          characterInfo={shikokuMetan}
          baseCharacterKey="四国めたん"
          targetCharacterKey="春日部つむぎ"
        />
      </section>

      <section class="mb-8">
        <h2 class="text-xl font-semibold mb-4">ずんだもん → 雨晴はう</h2>
        <CallBox
          characterInfo={zundamon}
          baseCharacterKey="ずんだもん"
          targetCharacterKey="雨晴はう"
        />
      </section>
    </div>
  </body>
</html>

<style lang="scss" is:global>
  /* NOTE: src/pages/dormitory/[characterId]/[...descriptionType].astro の is:global スタイルを dev/ui でも再現するため、必要最小限を複製しています */

  .description-call-box {
    display: flex;
    gap: 0.5rem;

    .description-call-line {
      display: flex;
      flex: 1;

      .description-call-one {
        padding: 0;
        flex: 1;
        display: flex;
        justify-content: center;
        align-items: center;

        .description-call-arrow {
          margin: -1rem 0;
          font-size: 1.5rem;
        }

        .description-call-text {
          padding-top: 0.25rem;
          padding-bottom: 0.25rem;
          font-size: 0.8rem;
          flex-grow: 1;
          border-style: solid;
          border-radius: 8px;
          text-align: center;

          &.unknown {
            color: gray;
          }
        }
      }
    }
  }
</style>
