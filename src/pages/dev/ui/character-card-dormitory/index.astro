---
import { characterInfos } from "@/constants/characterInfo";
import CharacterCard from "@/pages/dormitory/_CharacterCard.astro";
import "@/styles/bulma.scss";
import "@/styles/global.scss";
import "@/styles/helper.scss";

const characterInfo1 = characterInfos["ずんだもん"];
const characterInfo2 = characterInfos["四国めたん"];
const characterInfo3 = characterInfos["春日部つむぎ"];
const characterInfo4 = characterInfos["雨晴はう"];
---

<html lang="ja">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <meta name="robots" content="noindex, nofollow" />
    <title>CharacterCard (dormitory) 確認用ページ</title>
  </head>
  <body>
    <div style="padding: 2rem;">
      <h1 class="text-2xl font-bold mb-6">
        CharacterCard (dormitory) 確認用ページ
      </h1>

      <section class="mb-8">
        <h2 class="text-xl font-semibold mb-4">キャラクター一覧（抜粋）</h2>
        <div class="container character-container is-max-desktop">
          <div class="columns is-multiline is-centered">
            <CharacterCard characterInfo={characterInfo1} />
            <CharacterCard characterInfo={characterInfo2} />
            <CharacterCard characterInfo={characterInfo3} />
            <CharacterCard characterInfo={characterInfo4} />
          </div>
        </div>
      </section>
    </div>
  </body>
</html>

<style is:global>
  /* NOTE: dormitory/index.astro の is:global スタイルを dev/ui でも再現するため、必要最小限を複製しています */
  .character-container .card {
    box-shadow: none;
    border-style: solid;
    border-radius: 1rem;
    border-width: 3px;
  }

  .character-container .character-card {
    padding-top: 12px;
    cursor: pointer;
  }

  .character-container .character-card .card-image {
    margin: 0 auto;
  }

  .character-container .character-card .card-content {
    padding-left: 0;
    padding-right: 0;
    text-align: center;
    border-top: solid 2.5px;
  }
</style>
