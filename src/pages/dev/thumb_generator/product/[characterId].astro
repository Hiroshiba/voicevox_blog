---
/**
 * 製品ページのサムネイル生成
 */

import FontAwesomeIcon from "@/components/FontAwesomeIcon.astro";
import { characterEntries, characterKeys } from "@/constants/characterEntry";
import { characterInfos } from "@/constants/characterInfo";
import "@/styles/global.scss";
import { faDownload } from "@fortawesome/free-solid-svg-icons";
import type { GetStaticPaths, InferGetStaticPropsType } from "astro";
import { getImage } from "astro:assets";
import backgroundImage from "./background.png";

export const getStaticPaths = (async () =>
  characterKeys.map((key) => ({
    params: { characterId: characterEntries[key].id },
    props: { characterInfo: characterInfos[key] },
  }))) satisfies GetStaticPaths;
type Props = InferGetStaticPropsType<typeof getStaticPaths>;

const { characterInfo } = Astro.props;
const backgroundImageUrl = `url(${(await getImage({ src: backgroundImage })).src})`;
const bustupImageUrl = `url(${(await getImage({ src: characterInfo.bustupImage })).src})`;

const isDebug = false;
---

<meta charset="utf-8" />
<meta name="robots" content="noindex, nofollow" />

<div
  style={{
    width: "1200px",
    height: "630px",

    backgroundColor: characterInfo.lightColor,
    display: "flex",
    position: "relative",
  }}
>
  {/* 白枠 */}
  <div
    style={{
      position: "absolute",
      width: "72%",
      height: "90%",
      top: "5%",
      left: "12%",
      borderRadius: "60px",
      backgroundColor: "white",
    }}
  >
  </div>

  {/* ロゴと説明とダウンロードボタン */}
  <div
    style={{
      flexGrow: 1,
      height: "100%",
      position: "relative",
    }}
  >
    <div
      style={{
        position: "absolute",
        top: "21%",
        left: "33%",

        display: "flex",
        flexDirection: "column",
        justifyContent: "center",
        alignItems: "start",
      }}
    >
      <span
        style={{
          fontSize: "80px",
          fontWeight: "bold",
        }}
      >
        VOICEVOX
      </span>
      <span
        style={{
          fontSize: "37.1px",
          fontWeight: "bold",
          textAlign: "start",
          marginTop: "10px",
        }}
      >
        無料のテキスト読み上げ
        <br />
        ソフトウェア
      </span>
      <span
        class="vv-thumb-download"
        style={{
          fontSize: "40px",
          marginTop: "38px",
          height: "70px",
        }}
      >
        <span class="vv-thumb-download__icon">
          <FontAwesomeIcon icon={faDownload} />
        </span>
        <span class="vv-thumb-download__label">ダウンロード</span>
      </span>
    </div>
  </div>

  {/* スクショ */}
  <div
    style={{
      width: "40%",
      height: "100%",

      display: "flex",
      justifyContent: "center",
      alignItems: "center",
    }}
  >
    <div
      style={{
        width: "100%",
        height: "80%",
        overflow: "hidden",
      }}
    >
      <div
        style={{
          width: "100%",
          height: "100%",
          backgroundImage: backgroundImageUrl,
          backgroundSize: "cover",
          backgroundPosition: "left",
          position: "relative",
        }}
      >
        <div
          style={{
            position: "absolute",
            top: "20%",
            left: "2px",
            width: "38.5%",
            height: "52.1%",
            backgroundImage: bustupImageUrl,
            backgroundPosition: "center",
            backgroundSize: "cover",
            backgroundRepeat: "no-repeat",
            backgroundClip: "content-box",
            paddingBottom: "10%",
          }}
        >
        </div>
      </div>
    </div>

    {/* 枠表示、中央630px部分 */}
    {
      isDebug ? (
        <div
          style={{
            position: "absolute",
            width: "630px",
            height: "630px",
            top: "50%",
            left: "50%",
            transform: "translate(-50%, -50%)",

            border: "1px dashed black",
          }}
        />
      ) : undefined
    }
  </div>
</div>

<style is:global>
  html,
  body {
    margin: 0;
  }

  body {
    width: 1200px;
    height: 630px;
    overflow: hidden;
    text-rendering: optimizeLegibility;
    font-family: "Unhinted Rounded M+ 1p", sans-serif;
  }

  *,
  *::before,
  *::after {
    box-sizing: border-box;
  }

  .vv-thumb-download {
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 20px 50px;
    line-height: 60px;
    border-radius: 9999px;
    border: 0;

    background-color: rgb(165, 212, 173);
    color: rgb(23, 48, 27);
    font-family: "Unhinted Rounded M+ 1p", sans-serif;
    font-weight: 500;
  }

  .vv-thumb-download__icon {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 60px;
    height: 60px;
    margin-left: -20px;
    margin-right: 10px;
  }

  .vv-thumb-download__label {
    font-weight: 600;
  }
</style>
